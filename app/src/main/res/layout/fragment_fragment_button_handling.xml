<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workaround.ajeesh.ajr_27012018_workaround_fragments.Fragments.FragmentButtonHandling">


    <TextView
        android:id="@+id/textViewClickCount"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/click_count_0"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonPushMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/push_me" />

</FrameLayout>
